{
  "compilerOptions": {
    "target": "es5",                       // Ziel-JavaScript-Version (z.B. es5, es6, etc.)
    "module": "esnext",                    // Modulauflösung (esnext für moderne JavaScript-Module)
    "outDir": "./build",                   // Zielordner für die kompilierten JavaScript-Dateien
    "rootDir": "./src",                    // Wurzelverzeichnis der TypeScript-Dateien
    "strict": true,                        // Strenge Typüberprüfung aktivieren
    "esModuleInterop": true,               // Kompatibilität mit CommonJS-Modulen
    "skipLibCheck": true,                  // Bibliotheks-Checks überspringen
    "forceConsistentCasingInFileNames": true, // Konsistenz in Dateinamen erzwingen
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"  // Alle .ts-Dateien im src-Ordner
  ],
  "exclude": [
    "node_modules" // Ausschließen von node_modules
  ]
}
